generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model department {
  departmentid Int      @id @default(autoincrement())
  department   String
  acount       acount[]
  ticket       ticket[]
}

model prioritylevel {
  priorityid     Int      @id @default(autoincrement())
  prioritysymbol String
  ticket         ticket[]
}

model acount {
  acountid           Int        @id @default(autoincrement())
  acount_name        String
  departmentid       Int
  department  department @relation(fields: [departmentid], references: [departmentid], map: "Acount_depatmentid_fkey")
  authored ticket[] @relation("author")
  workingon ticket[] @relation("worker")
}

model ticket {
  id              Int           @id @default(autoincrement())
  headline        String
  departmentid    Int
  prioritylevelid Int
  description     String        @db.VarChar(500)
  open            Boolean
  authorid        Int
  workingonid     Int?
  createdAt       DateTime      @default(now())
  author          acount        @relation("author", fields: [authorid], references: [acountid])
  worker          acount?        @relation("worker", fields: [workingonid], references: [acountid])
  department      department    @relation(fields: [departmentid], references: [departmentid], map: "Ticket_departmentid_fkey")
  prioritylevel   prioritylevel @relation(fields: [prioritylevelid], references: [priorityid], map: "Ticket_prioritylevelid_fkey")    

  @@index([departmentid], map: "Ticket_departmentid_fkey")
  @@index([prioritylevelid], map: "Ticket_prioritylevelid_fkey")
}
