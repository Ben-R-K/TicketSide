generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model department {
  departmentid Int      @id @default(autoincrement())
  department   String
  ticket       ticket[]
  acount       acount[]
}

model prioritylevel {
  priorityid     Int      @id @default(autoincrement())
  prioritysymbol String
  ticket         ticket[]
}

model acount {
  id        Int    @id @default(autoincrement())
  acount_name String
  departmentid Int
  department department @relation(fields: [departmentid], references: [departmentid], map: "acount_departmentid_fkey")
}

model ticket {
  id              Int           @id @default(autoincrement())
  headline        String
  departmentid    Int
  prioritylevelid Int
  description     String        @db.VarChar(500)
  open            Boolean
  department      department    @relation(fields: [departmentid], references: [departmentid], map: "Ticket_departmentid_fkey")
  prioritylevel   prioritylevel @relation(fields: [prioritylevelid], references: [priorityid], map: "Ticket_prioritylevelid_fkey")

  @@index([departmentid], map: "Ticket_departmentid_fkey")
  @@index([prioritylevelid], map: "Ticket_prioritylevelid_fkey")
}
