generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id       Int    @id @default(autoincrement())
  headline String
  deparment department @relation(fields: [deparmentid], references: [deparmentid])
  deparmentid Int
  prioritylevel prioritylevel @relation(fields: [prioritylevelid], references: [priorityid])
  prioritylevelid Int
  description String @db.VarChar(500)
  open Boolean
}

model department {
  deparmentid Int @id @default(autoincrement())
  deparment String
  Tickets Ticket[]
}

model prioritylevel {
  priorityid Int @id @default(autoincrement())
  prioritysymbol String
  Tickets Ticket[]
}
